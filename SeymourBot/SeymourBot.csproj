<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="BlankDB\**" />
    <EmbeddedResource Remove="BlankDB\**" />
    <None Remove="BlankDB\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="2.0.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="2.2.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="2.2.3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="DataAccess\Storage\Tournament\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OverseerBot\OverseerBot.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\BotDialogs.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>BotDialogs.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\DBPaths.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DBPaths.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\BotDialogs.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>BotDialogs.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\DBPaths.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>DBPaths.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
